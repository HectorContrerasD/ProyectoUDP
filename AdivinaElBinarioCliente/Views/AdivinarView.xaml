<UserControl x:Class="AdivinaElBinarioCliente.Views.AdivinarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdivinaElBinarioCliente.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#2C3E50">
        <TextBlock TextAlignment="Center" FontSize="25" Margin="25" Foreground="White">Ingrese el valor del número binario mostrado por el servidor:</TextBlock>
        <TextBox Margin="25" TextAlignment="Center" Text="{Binding respuesta.Respuesta}" FontSize="25" Background="#34495E" Foreground="White"></TextBox>
        <TextBlock TextAlignment="Center" FontSize="25" Foreground="White" Text="{Binding Mensaje}" ></TextBlock>
        <Button Margin="30" Command="{Binding EnviarCommand}" FontSize="25" Background="#3498DB" FontWeight="Black" Foreground="White">Enviar respuesta</Button>
    </StackPanel>


</UserControl>
