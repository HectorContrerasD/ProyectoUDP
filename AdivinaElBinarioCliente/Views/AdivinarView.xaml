<UserControl x:Class="AdivinaElBinarioCliente.Views.AdivinarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdivinaElBinarioCliente.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextAlignment="Center" FontSize="25" Margin="25" >Ingrese el valor del número binario mostrado por el servidor:</TextBlock>
        <TextBox  Margin="25" TextAlignment="Center" Text="{Binding respuesta.Respuesta}" FontSize="25"> </TextBox>
        <TextBlock TextAlignment="Center" FontSize="25" Text="Mensajeaagria"></TextBlock>
        <Button Margin="30" Command="{Binding EnviarCommand}" FontSize="25">Enviar respuesta</Button>
    </StackPanel>
</UserControl>
