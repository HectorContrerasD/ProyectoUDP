<Window x:Class="AdivinaElBinarioServer.Views.ServerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdivinaElBinarioServer.Views"
        xmlns:vm="clr-namespace:AdivinaElBinarioServer.ViewModels"
        mc:Ignorable="d"
        Title="ServerView" Height="450" Width="800">
    <Window.DataContext>
        <vm:ServerViewModel></vm:ServerViewModel>
    </Window.DataContext>
    <StackPanel>
        <TextBlock TextAlignment="Right" Margin="0,0,20,0">La ip del server es: <Run Text="{Binding IP}"></Run></TextBlock>
        <TextBlock TextAlignment="Center" FontSize="36">Adivina el número Binario</TextBlock>
        <Border x:Name="binario" Margin="20" BorderThickness="2" BorderBrush="Cyan">
            <StackPanel>
                <TextBlock  TextAlignment="Center" FontSize="50" Text="{Binding NumeroR}"></TextBlock>
            <TextBlock  TextAlignment="Center" FontSize="50" Text="{Binding Binario}"></TextBlock>
            </StackPanel>
            
        </Border>

        <ListBox ItemsSource="{Binding UsuariosAcertados}">
                
            </ListBox>
        <Button Command="{Binding IniciarCommand}"> Iniciar</Button>
        
    </StackPanel>
</Window>
